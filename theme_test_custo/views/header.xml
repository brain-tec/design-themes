<?xml version="1.0" encoding="utf-8"?>
<odoo>

<!-- Theme Header - Option -->
<template id="template_header_opt" inherit_id="website.snippet_options" name="Test Theme Custom Header Template - Option">
    <xpath expr="//we-select[@data-variable='header-template']" position="inside">
        <we-button title="Custom Theme"
            data-customize-website-views="theme_test_custo.template_header_custom"
            data-customize-website-variable="'custom-theme'"
            data-img="/theme_test_custo/static/src/img/wbuilder/template_header_opt.svg"/>
    </xpath>
</template>

<!-- Theme Header - Layout -->
<record id="template_header_custom" model="theme.ir.ui.view">
    <field name="name">Test Theme Custom Header Template</field>
    <field name="type">qweb</field>
    <field name="key">theme_test_custo.template_header_custom</field>
    <field name="priority">16</field>
    <field name="inherit_id" ref="website.layout"/>
    <field name="mode">extension</field>
    <field name="arch" type="xml">
        <xpath expr="//header//nav" position="replace">

            <nav data-name="Navbar" class="navbar navbar-expand-lg">
                <div class="container">
                    <t t-call="website.placeholder_header_brand"/>
                    <t t-call="website.navbar_nav">
                        <!-- Menu -->
                        <t t-foreach="website.menu_id.child_id" t-as="submenu">
                            <t t-call="website.submenu">
                                <t t-set="item_class" t-valuef="nav-item"/>
                                <t t-set="link_class" t-valuef="nav-link"/>
                            </t>
                        </t>
                        <!-- Sign In -->
                        <t t-call="portal.placeholder_user_sign_in">
                            <t t-set="_item_class" t-value="'nav-item'"/>
                            <t t-set="_link_class" t-value="'nav-link text-900'"/>
                        </t>
                        <!-- User Dropdown -->
                        <t t-call="portal.user_dropdown">
                            <t t-set="_user_name" t-value="true"/>
                            <t t-set="_item_class" t-value="'nav-item dropdown ml-auto'"/>
                            <t t-set="_link_class" t-value="'nav-link text-900'"/>
                        </t>
                    </t>
                </div>
            </nav>

        </xpath>
    </field>
</record>

</odoo>
